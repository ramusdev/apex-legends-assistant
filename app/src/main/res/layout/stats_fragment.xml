<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="50dp"
                android:layout_toRightOf="@id/user_image"
                android:text="User"
                android:textColor="@color/yellow"
                android:textSize="35sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/user_image"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_account"
                app:tint="@color/yellow" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:fillViewport="true"
            android:orientation="vertical"
            android:background="@drawable/background_bar"
            android:layout_marginBottom="15dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/data_mode20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="20dp"
                    android:text="OVERALL"
                    android:textColor="@color/dark_red"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_gamesplayed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="GAMES PLAYED"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/data_gamesplayed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:id="@+id/divider20"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/stats_dots" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title_creepingbarragedamage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="CREEPING BARAGE DAMAGE"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/data_creepingbarragedamage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:id="@+id/divider41"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/stats_dots" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title_topthree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="TOP 3"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/data_topthree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:id="@+id/divider50"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/stats_dots" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title_damage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="DAMAGE"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/data_damage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:id="@+id/divider40"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/stats_dots" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title_droppeditems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="DROPPED ITEMS"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/data_droppeditems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:id="@+id/divider52"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/stats_dots" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/title_beaconsscanned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="BEACONS SCANNED"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/data_beaconsscanned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:id="@+id/divider53"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/stats_dots" />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:stretchColumns="0,1,2,3"
            android:divider="@color/grey_dark"
            android:dividerPadding="40dp"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/background_bar"
            android:layout_height="wrap_content">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:layout_gravity="center"
                    android:fillViewport="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/title_main2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="20dp"
                        android:text="KILLS"
                        android:textColor="@color/dark_red"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fillViewport="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/data_pistolkills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />
                    <View
                        android:id="@+id/divider2"
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/red" />
                    <TextView
                        android:id="@+id/title_pistolkills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PISTOL KILLS"
                        android:layout_gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/data_arkills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />
                    <View
                        android:id="@+id/divider3"
                        android:layout_width="100dp"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/red" />
                    <TextView
                        android:id="@+id/title_arkills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AR KILLS"
                        android:layout_gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp" />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:layout_gravity="center"
                    android:fillViewport="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/data_kills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />
                    <View
                        android:id="@+id/divider5"
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/red" />
                    <TextView
                        android:id="@+id/title_kills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="KILLS"
                        android:textColor="@color/red"
                        android:textSize="15sp" />
                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fillViewport="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/data_kd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:textStyle="bold" />
                    <View
                        android:id="@+id/divider15"
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/red" />
                    <TextView
                        android:id="@+id/title_kd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KILLS / DEATHS"
                        android:layout_gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/data_beastofthehuntkills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <View
                        android:id="@+id/divider10"
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/red" />
                    <TextView
                        android:id="@+id/title_beastofthehuntkills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BEAST HUNT KILLS"
                        android:layout_gravity="center"
                        android:textColor="@color/red"
                        android:textSize="15sp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</ScrollView>